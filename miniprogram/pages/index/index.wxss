.nav{
  width:100%;
  height:34px;
  z-index:3;
  display:flex;
  position:relative;
}
.nav>.abs{
  position:absolute;
  top:0;
  right:0%;
  width:40px;
  height:32px;
  z-index:3;
  display:flex;
  justify-content:center;
  align-items:center;
  background-color:#fff;
}
.nav>.abs>image{
  width:40rpx;
  height:40rpx;
  transform-origin:center center;
  transition-duration:0.5s;
}
.nav>.container{
  display:flex;
  justify-content:flex-start;
  align-items:center;
  width:100%;
  height:34px;
  z-index:3;
  overflow-x:scroll;
}
.nav>.container>.content{
  padding:2px 10px;
  height:30px;
  margin-left:4px;
  display:flex;
  justify-content:center;
  align-items:center;
}
.nav>.container>.active{
  color:#794989;
  border-bottom:#695077 2px solid;
}
.nav>.container>.content>text{
  white-space:nowrap;
  font-size:15px;
}
.nav>.navtab{
  width:100%;
  background-color:#fff;
  position:absolute;
  top:34px;
  z-index:2;
  left:0;
}
.nav>.navtab>.futher{
  width:100%;
  background-color:#fff;
  display:flex;
  flex-wrap:wrap;
  padding-bottom:10rpx;
}
.nav>.navtab>.futher>.active{
  border:1px solid #7f4395;
}
.nav>.navtab>.futher>view>.active{
  color:#7f4395;
}
.nav>.navtab>.futher>view{
  border:1px solid gray;
  padding:0rpx 10rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  margin-left:10rpx;
  margin-top:10rpx;
  border-radius:20px;
}
.nav>.navtab>.futher>view>text{
  font-size:13px;
  color:#333;
}
.other{
  width:100%;
  height:178px;
  display:flex;
  flex-wrap:wrap;
  overflow:hidden;
}
.other>view{
  width:20%;
  height:89px;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.other>view>image{
  width:88rpx;
  height:88rpx;
  margin-bottom:10rpx;
}
.other>view>text{
  font-size:22rpx;
}
.show{
  width:100%;
  height:178px;
}
.show>.swiper{
  width:100%;
  height:150px;
}
.show>.swiper>.wxswiper .swiperimg{
  width:750rpx;
  height:294rpx;
}
.show>.bottom{
  width:100%;
  height:30px;
  display:flex;
}
.show>.bottom>view{
  width:33.33%;
  height:100%;
  display:flex;
  justify-content:center;
  align-items:center;
}
.show>.bottom>view>text{
  font-size:12px;
  color:#7a4689;
}
.show>.bottom>view>image{
  width:30rpx;
  height:30rpx;
  margin-right:4px;
}
.scroll{
  width:100%;
}
.scroll>.remind{
  width:100%;
  height:50px;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.scroll>.remind>.title{
  font-size:15px;
  color:#4A4A4A;
  border-bottom:#4A4A4A 2px solid;
}
.scroll>.remind>.content{
  font-size:14px;
  color:#CCB17A;
}
