  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}
.section>.bottom{
  width:100%;
  height:6vh;
  background-color:#fffaf1;
  display:flex;
  align-items:center;
  padding:0 3vw;  
}
.section>.bottom>.content{
  margin:0 16rpx;
  display:flex;
}
.section>.bottom>.line>image{
  width:36rpx;
  height:36rpx;
}
.section>.bottom>.content>text{
  color:#bf9e6b;
  font-size:24rpx;
  white-space:nowrap;
}
.section>.bottom>.content>image{
  width:36rpx;
  height:36rpx;
}
.hr{
  width:100%;
  height:2vh;
