  justify-content:flex-end;  
}
.section>.top>.right>.four>text{
  font-size:26rpx;
}
.section>.top>.right>.four>image{
  width:36rpx;
  height:36rpx;
  margin-right:6rpx;
}
.section>.top>.right>.five{
  width:100%;
  height:5vh;
  display:flex;
  align-items:center;
  justify-content:flex-end;  
}
.section>.top>.right>.five>text{
  font-size:28rpx;
  color:#bbb;
}
.section>.top>.right>.five>image{
  width:36rpx;
  height:36rpx;
  margin-left:6rpx;
}
.section>.center{
  width:100%;
  height:12vh;
  display:flex;
  padding:0 3vw;
  flex-direction:column;  
}
.section>.center>.up{
  width:100%;
  height:6vh;  
}
.section>.center>.up>text{
  color:#4a4a4a;
  font-size:34rpx;
}
.section>.center>.down{
  width:100%;
  height:6vh; 
}
.section>.center>.down>text{
  color:#999;
  font-size:24rpx;
  overflow: hidden;
  -o-text-overflow: ellipsis;
