  align-items:center; 
}
.join>.one>.right>.lack{
  flex-direction:column;
}
.join>.one>.right>.lack>.surplus{
  font-size:23rpx;
  color:#4A4A4A;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.join>.one>.right>.lack>.time{
  font-size:22rpx;
  white-space:nowrap;
  color:#999;
}
.join>.one>.right>.atten>button{
  width:130rpx;
  height:60rpx;
  font-size:24rpx;
  padding:0;
  background-color:rgb(126, 67, 149);
}
