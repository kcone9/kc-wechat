.footer{
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:8vh;
  z-index:3;
  display:flex;
  justify-content:center;
  align-items:center;  
}
.footer>.service{
  width:20%;
  height:8vh;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  background-color:#fff;
  border-top:1px solid #ececec;
  border-right:1px solid #ececec;
}
.footer>.service>image{
  width:40rpx;
  height:40rpx;
