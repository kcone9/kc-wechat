.classify{
  width:100%;
  height:34px;
  display:flex;
  border-bottom:1px solid #f5f4f4;
}
.classify>view{
  width:33.33%;
  height:100%;
  font-size:15px;
  display:flex;
  justify-content:center;
  align-items:center;
}
.classify>view>image{
  margin-left:1px;
}
.classify>view>.priceimg{
  width:30rpx;
  height:40%;
}
.classify>view>.allimg{
  width:30rpx;
  height:40%;
}
.container{
  width:100%;
  display:flex;
  flex-wrap:wrap;
}
.container>view{
  width:50%;
  height:280px;
  border-bottom:1px solid #f5f4f4;
  display:flex;
  flex-direction:column;
}
.container>.borright{
  border-right:1px solid #f5f4f4;
}
.container>view>.image{
  width:100%;
  height:62%;
  display:flex;
  justify-content:center;
  align-items:center;
  position:relative;
}
.container>view>.image>.abs{
  position:absolute;
  bottom:6%;
  left:6px;
  font-size:14px;
  padding:0 4px;
  border-top-right-radius:50px;
  border-bottom-right-radius:50px;
  color:#fff;
  background-color:#d7b994;
}
.container>view>.image>image{
  width:8.8rem;
  height:8.8rem;
}
.container>view>.content{
  width:100%;
  height:38%;
}
.container>view>.content>view{
  width:100%;
  height:20%;
  padding-left:6px;
}
.container>view>.content>.price,.container>view>.content>.label{
  display:flex;
  align-items:center;
}
.container>view>.content>.price>.new{
  color:#F7A701;
  font-size:16px;
}
.container>view>.content>.price>.yarm{
  color:#999;
  margin-left:8px;
  font-size:12px;
}
.container>view>.content>.label{
  font-size:11px;
}
.container>view>.content>.label>.one{
  color:#fff;
  background-color:#AB7FD1;
  padding:0 4px;
}
.container>view>.content>.label>.two{
  color:#FB4C81;
  background-color:#fff;
  border:1px solid #FB4C81;
  margin-left:4px;
  padding:0 4px;
}
.container>view>.content>.title{
  color:#BF9E6B;
  font-size:14px;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.container>view>.content>.comman{
  font-size:14px;
  color:#4A4A4A;
}
.container>view>.content>.comment{
  color:#BBB;
  font-size:11px;
}
.shade{
  width:100%;
  position:relative;
}
.shade>.message{
  width:100%;
  height:100vh;
  position:absolute;
  z-index:3;
  background-color:rgba(0,0,0,0.8);
  overflow:hidden;
}
.shade>.message>.nav{
  width:100%;
  height:32vh;
  display:flex;
  flex-direction:column;
  flex-wrap:wrap;
  background-color:#fff;
  z-index:4;
}
.shade>.message>.nav>button{
  width:18vw;
  height:5vh;
  font-size:22rpx;
  margin-top:1vh;
  background-color:#fff;
  border:1px solid #e8e8e8;
  white-space:nowrap;
}
.other{
  width:100%;
  height:34px;
  background-color:#f4f4f4;
  /* border:1px solid red; */
}
.other>.futher{
  width:100%;
  height:30px;
  margin-top:2px;
  margin-bottom:2px;
  background-color:#fff;
  display:flex;
 position:relative;
  overflow-x:scroll;
  align-items:center;
}

.other>.futher>view:not(.abs){
  max-width:60rpx;
  min-width:120rpx;
  height:30px;
  margin-left:6rpx;
  font-size:24rpx;
  display:flex;
  justify-content:center;
  align-items:center;
}
.other>.abs{
  position:absolute;
  display:flex;
  justify-content:center;
  align-items:center;
  background-color:#fff;
  /* border:1px solid red; */
  z-index:2;
  width:70rpx;
  height:58rpx;
  top:0;
  right:0;
}
.other>.abs>image{
  width:34rpx;
  height:34rpx;
  transform-origin:center center;
  /* transition:rotate(0deg); */
  transition:all 0.5s;
}
.other>.futher>.active{
  border-bottom:2px solid #7f4395;
  color:#7f4395;
}







